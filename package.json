{
  "name": "orm",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.12.0-beta.1",
    "sequelize-cli": "^6.3.0",
    "uuidv4": "^6.2.12"
  },
  "scripts": {
    "start": "node server.js 8080",
    "test": "DATABASE_URL='sqlite::memory' jest --coverage",
    "ge:badges": "jest-coverage-badges --output badges",
    "migrate:reset": "npx sequelize db:migrate:undo:all --url $DATABASE_URL && npm run migrate",
    "migrate": "npx sequelize db:migrate --url $DATABASE_URL"
  },
  "devDependencies": {
    "jest": "^27.4.5",
    "jest-coverage-badges": "^1.1.2",
    "nodemon": "^2.0.15",
    "sqlite3": "^5.0.2",
    "supertest": "^6.1.6"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ]
  }
}
